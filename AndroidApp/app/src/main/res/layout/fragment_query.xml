<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/android_image14"
    tools:context=".QueryFragment">

    <TextView
        android:id="@+id/titlequery"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="12dp"
        android:text="EXECUTE ANY QUERY AND SEE THE RESULTS "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/green"


        />
    <TextView
        android:id="@+id/txtquery"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Query Description"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/light_red"
        android:textAlignment="center"
        android:layout_margin="12dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/queryrun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  EXCECUTE  "
        android:textSize="17dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtqueryresult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Query Result"
                android:textColor="@color/white"
                android:layout_margin="24dp"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </ScrollView>
    </LinearLayout>


</LinearLayout>
