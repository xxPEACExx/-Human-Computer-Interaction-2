<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".InsertFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/firestore1"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:text="Insert Into FireStore"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:layout_marginTop="220dp"
        android:id="@+id/insertGameButton"/>



    <Button android:layout_height="wrap_content"
        android:layout_width="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18dp"
        android:text="Query1"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_button_light_yellow"
        android:id="@+id/queryButton1"
        app:layout_constraintTop_toBottomOf="@+id/insertGameButton"
        app:layout_constraintHorizontal_bias="0.501"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_button_red"
        android:textColor="@color/white"

        android:textSize="18dp"
        android:text="Query2"
        android:layout_marginTop="50dp"
        android:id="@+id/queryButton2"
        app:layout_constraintTop_toBottomOf="@+id/queryButton1"
        app:layout_constraintHorizontal_bias="0.501"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_button_blue"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:text="Query3"
        android:layout_marginTop="50dp"
        android:id="@+id/queryButton3"
        app:layout_constraintTop_toBottomOf="@+id/queryButton2"
        app:layout_constraintHorizontal_bias="0.501"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text=" Firebase is a platform
developed by Google for creating mobile
and web applications. It was originally
an independent company founded in 2011."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>